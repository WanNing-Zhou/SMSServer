<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhouzhou.SMSServer.mapper.UserMapper">
    <insert id="insertUser">

    </insert>
    <update id="updateById">
        update users
        set username = #{newUser.username},name = #{newUser.name},password=#{newUser.password},phone=#{newUser.phone},role_id=#{newUser.role_id}
        where id = #{newUser.id}
    </update>
    <delete id="deleteUserById">

    </delete>

    <select id="findUseForLogin" resultType="com.zhouzhou.SMSServer.pojo.User">
        select * from users where name = #{username} and password = #{password}
    </select>
    <select id="findById" resultType="com.zhouzhou.SMSServer.pojo.User">
        select * from users where id = #{id}
    </select>
    <select id="getUserList" resultType="com.zhouzhou.SMSServer.pojo.User"></select>
    <select id="getUserAll" resultType="com.zhouzhou.SMSServer.pojo.User"></select>

</mapper>